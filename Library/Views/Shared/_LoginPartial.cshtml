@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<style>
    body {
        background-color: #f5f5dc; /* Бежов фон */
        color: #5a4a42; /* Тъмен кафяв текст */
        font-family: Arial, sans-serif;
    }

    .navbar-nav {
        background-color: #8f9779; /* Зеленикав фон за навигацията */
        padding: 10px;
        border-radius: 8px;
    }

    .nav-link {
        color: #f5f5dc !important; /* Светъл текст за контраст */
    }

        .nav-link:hover {
            color: #d4c7a1 !important;
        }

    .btn-link {
        color: #f5f5dc !important;
    }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Users" asp-action="Create">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
