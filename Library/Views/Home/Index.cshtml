@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f5dc, #faf3e0); 
        color: #5a4a42;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        padding: 30px 15px; 
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .display-4 {
        color: #8b6f47;
        font-size: 2.5em;
        margin-bottom: 20px; 
    }

    a {
        color: #a67c52; /* Warm color for links */
        text-decoration: none;
    }

        a:hover {
            color: #805d3a;
            text-decoration: underline;
        }

    /* Card Styles */
    .row {
        display: flex;
        justify-content: center;
        flex-wrap: wrap; 
    }

    .card {
        width: 100%;
        max-width: 300px;
        margin: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 0 0 15px 15px;
    }

    .card-img-top {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>

<div class="container">
    <h1 class="display-4">Welcome to Our Site</h1>
    <p>Explore our amazing features below</p>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://i.pinimg.com/236x/c3/33/de/c333de5f5be78b52fa8038094bef08ab.jpg" class="card-img-top" alt="Feature 1">
                <div class="card-body">
                    <p class="card-text">Here you can find the latest books.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://i.pinimg.com/236x/6c/9c/99/6c9c990d7d5572896e8abab6da454129.jpg" class="card-img-top" alt="Feature 2">
                <div class="card-body">
                    <p class="card-text">To see the best authors.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://i.pinimg.com/236x/6b/0f/d2/6b0fd24d40f02666bfc498c624cae2c4.jpg" class="card-img-top" alt="Feature 3">
                <div class="card-body">
                    <p class="card-text">And give your critical opinion on any book you want.</p>
                </div>
            </div>
        </div>
    </div>
</div>
