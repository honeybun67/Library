@model IndexBookRatingsUserViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Author name 
            </th>
            <th>
                Rating
            </th>
            <th>
                Review
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserBookRatings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Review)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookRatingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookRatingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookRatingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_PagingPartial" />
